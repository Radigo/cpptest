{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "mingw64 build",
            "command": "C:/msys64/mingw64.exe",
            "args": [
                "-W",
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/sdltest.cpp",
                "-o",
                "${workspaceFolder}/sdltest.exe",
                "-I${workspaceFolder}/SDL2/include",
                "-lmingw32",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "helloworld build",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}/helloworld.cpp",
                "-o",
                "${workspaceFolder}/helloworld.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}