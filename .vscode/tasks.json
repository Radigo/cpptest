{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-W",
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/sdltest.exe",
                "-lSDL2",
                "-lSDL2main",
                "-mwindows"// Remove to allow console debug outside VScode
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build main into sdltest.exe"
        },
        {
            "type": "cppbuild",
            "label": "helloworld build",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}/helloworld.cpp",
                "-o",
                "${workspaceFolder}/helloworld.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
